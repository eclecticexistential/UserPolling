@{
    ViewBag.Title = "Ask Questions";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<h1>Purpose Your Question Below</h1>
@using (Html.BeginForm())
{
    <input class="form-control" type="text" name="question" placeholder="Ask Away" />
    <button type="submit" class="btn btn-primary">Submit</button>
}
